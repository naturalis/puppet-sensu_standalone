{
  "client": {
    "name": "<%= @fqdn %>",
    "address": "<%= @ipaddress %>",
    "subscriptions": [
      <% scope.lookupvar("sensu_standalone::subscriptions").each do |subscription| -%>
      "<%=subscription %>"
      <% end -%>
    ],
    "socket": {
      "bind": "127.0.0.1",
      "port": 3030
    },
    "safe_mode": false,
    "keepalive": {
      "handlers": [
        <% scope.lookupvar("sensu_standalone::handlers").each do |handler| -%>
        "<%=handler %>"
        <% end -%>
      ]
    }
  }
}

